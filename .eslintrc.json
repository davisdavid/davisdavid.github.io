{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.eslint.json"
  },
  "rules": {
    "jsx-quotes": ["error", "prefer-single"],
    "quotes": ["error", "single"],
    "indent": ["error", "tab"]
  },
  "overrides": [],
  "plugins": ["@typescript-eslint"]
}
